#:import utils kivy.utils


<BoubleButton@Button>:
    background_normal: ''
    background_color: 0,0,0,0
    color_testing: (177/255.0,179/255.0,181/255.0,1)
    #pos_hint: {'center_x': 0.5}
    #size_hint: (None,None)
    #width: 90
    #height: 60
    canvas.before:
        Color: 
            rgba: self.color_testing 
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [100]

<GreenButton@Button>:
    background_normal: ''
    background_color: 0,0,0,0
    color_testing: (20/255.0,199/255.0,0/255.0,1)
    canvas.before:
        Color: 
            rgba: self.color_testing  
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [100]

<YellowButton@Button>:
    background_normal: ''
    background_color: 0,0,0,0
    color_testing: (252/255.0,233/255.0,3/255.0,1)
    canvas.before:
        Color: 
            rgba: self.color_testing 
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [100]

<OrangeButton@Button>:
    background_normal: ''
    background_color: 0,0,0,0
    color_testing: (252/255.0,144/255.0,3/255.0,1) 
    canvas.before:
        Color: 
            rgba: self.color_testing 
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [100]

<RedButton@Button>:
    background_normal: ''
    background_color: 0,0,0,0
    color_testing: (207/255.0,4/255.0,4/255.0,1)
    canvas.before:
        Color: 
            rgba: self.color_testing
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [100]

<PurpleButton@Button>:
    background_normal: ''
    background_color: 0,0,0,0
    color_testing: (159/255.0,4/255.0,207/255.0,1)
    canvas.before:
        Color: 
            rgba: self.color_testing  
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [100]

<BlueButton@Button>:
    background_normal: ''
    background_color: 0,0,0,0
    color_testing: (0,0,1,1)
    canvas.before:
        Color: 
            rgba: self.color_testing 
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [100]

