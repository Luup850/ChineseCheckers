<ChineseCheckersLayout>:
    orientation: 'vertical'
    table: checkers_table

    GridLayout:
        cols:1
        size: root.width, root.height
        padding: 50
        spacing: 50

        CheckersTable:
            id: checkers_table
            
    
        Button:
            text: "RESET GAME"
            pos_hint: {'center_x': 1}
            font_size: 32
            size_hint: (1,.1)
            width: 80
            height: 100
            bold: True
            on_press: root.reset()
            #background_normal: ''
            #background_color: (252/255.0,203/255.0,96/255.0,1)  

                          
